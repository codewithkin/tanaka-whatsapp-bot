generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
    id  String @default(uuid())
    
    name    String
    imageUrl    String

    price   Int
    description String?

    createdAt   DateTime @default(now())
}